<button type="button" class="btn btn-primary btn-lg btn-block">Invoices Details </button>
<div class="container" style= 'background-color: #F0FFFF'><br>
  <center>
    <table id="more" class="table table-striped table-bordered" style="width: 90%;">
      <thead class='table-dark'>
        <tr>
          <th>Total Invoice</th>
          <th>Sub Total</th>
          <th>Invoice Tax</th>
          <th>Delivery Fee</th>
          <th>Invoice Fee</th>
          <th>Invoice Discount</th>
          <th>Invoice Cost</th>
          <th>Invoice Profit</th>
          <th>Invoice Margin</th>
          <th>Customer Phone</th>
        </tr>
      </thead>

      <tbody>
        <% Person.all.each do |rec| %>
          <tr>
            <td><%= number_to_currency rec.total %></td>
            <td><%= number_to_currency rec.sub_total %></td>
            <td><%= number_to_currency rec.tax %></td>
            <td><%= number_to_currency rec.delivery %></td>
            <td><%= number_to_currency rec.fee %></td>
            <td><%= number_to_currency rec.discount %></td>
            <td><%= number_to_currency rec.cost %></td>
            <td><%= number_to_currency rec.profit %></td>
            <td><%= rec.margin %> %</td>
            <td><%= rec.phone %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </center>
</div>
  <br>
  <button type="button" class="btn btn-info btn-lg btn-block">Total Invoices Details </button>
  <table class='table table-hover table-striped'>
    <thead class='bg-success'>
      <tr>
        <th>Total Invoces</th>
        <th>Sub Totals</th>
        <th>Taxs</th>
        <th>Deliveries</th>
        <th>Fee</th>
        <th>Discounts</th>
        <th>Costs</th>
        <th>Profits</th>
        <th>Margin</th>
      </tr>
    </thead>

    <tbody>
      <tr>
        <td><%= number_to_currency total_invoices %></td>
        <td><%= number_to_currency total_subs %></td>
        <td><%= number_to_currency total_taxs %></td>
        <td><%= number_to_currency total_delvs %></td>
        <td><%= number_to_currency total_fees %></td>
        <td><%= number_to_currency total_discounts %></td>
        <td><%= number_to_currency total_costs %></td>
        <td><%= number_to_currency total_profits %></td>
        <td><%= (total_profits / total_subs * 100).round(2) %> %</td>
      </tr>
    </tbody>
  </table>
<br>
