<%= form_with(model: person, local: true) do |form| %>
  <% if person.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(person.errors.count, "error") %> prohibited this person from being saved:</h2>

      <ul>
        <% person.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<div class="container" style="background-color: #cceeff;" ><br>
  <div class="row">
    <div class="col-sm">
      <div class="field">
        <%= form.label :name %>
        <%= form.text_field :name, class:'form-control' %>
      </div>

      <div class="field">
        <%= form.label :phone %>
        <%= form.text_field :phone, class:'form-control' %>
      </div>

      <div class="field">
        <%= form.label :email %>
        <%= form.text_field :email, class:'form-control' %>
      </div>
    </div>
    <div class="col-sm">
      <div class="field">
        <%= form.label :address %>
        <%= form.text_field :address, class:'form-control'%>
      </div>

      <div class="field">
        <%= form.label :address2 %>
        <%= form.text_field :address2, class:'form-control' %>
      </div>

      <div class="field">
        <%= form.label :city %>
        <%= form.text_field :city, class:'form-control' %>
      </div>
    </div>
    <div class="col-sm">
      <div class="field">
        <%= form.label :zip %>
        <%= form.text_field :zip, class:'form-control' %>
      </div>
      <div class="field">
        <%= form.label :state %>
        <%= form.text_field :state, class:'form-control' %>
      </div><br>

      <div class="field">
        Sale Rep: <%= form.select :slae_rep,[current_user.username] %>
      </div>
    </div>
  </div><br>
</div><br>
<!-- tax, finance if include  -->
<div class="container">
  <div class="row">
    <div class="col-sm">
      <button type="button" class="btn btn-success btn-lg btn-block">
        Please Click to include TAX!&nbsp;&nbsp; <%= form.check_box :tax_inc %>
      </button>
    </div>
    <div class="col-sm">
      <button type="button" class="btn btn-warning btn-lg btn-block">
        Please Click if Finance!&nbsp;&nbsp; <%= form.check_box :finance %>&nbsp;&nbsp;
        <%= form.text_field :financ_com, placeholder: "Finance company " %>
      </button>
    </div>
  </div>
</div><br>

  <% if current_user  && current_user.admin? %>
    <div class="field">
      <font size="5" color="red">Please Update the Actual Cost for this Invoice!</font><br>
      <%= form.text_field :cost, class:'form-control' %>
    </div><br>
  <% end %>

  <div class="actions">
    <button class="btn btn-info btn-lg btn-block" type="submit"><h2>Proceed to Step #2 to Add Sales Details! </h2></button>
  </div>
<% end %>
