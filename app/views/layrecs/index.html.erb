<div class="row">
  <div class="col-sm">
    <%= link_to 'New Purchase', new_person_path, :class => "btn btn-outline-success btn-lg btn-block" %>
  </div>
  <div class="col-sm">
    <%= link_to 'Sample Invoice', new_exrec_path, :class => "btn btn-outline-danger btn-lg btn-block"  %>
  </div>
  <div class="col-sm">
    <%= link_to 'New Layway Purchase', new_layrec_path, :class => "btn btn-outline-warning btn-lg btn-block"  %>
  </div>
  <div class="col-sm">
    <%= link_to 'All Invoices', people_path, :class => "btn btn-outline-info btn-lg btn-block" %>
  </div>
</div><br>
<button type="button" class="btn btn-info btn-lg btn-block">
  <h3>All Layway Invoices!</h3>
</button>
<center>
  <table id="lay" class="table table-striped table-bordered" style="width: 1000px;">
  <thead class="table-warning">
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th>Date</th>
      <% if current_user  && current_user.admin? %>
        <th>Action</th>
        <th>Action</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @layrecs.each do |layrec| %>
      <tr>
        <td><%= link_to layrec.name.titleize, layrec %></td>
        <td><%= layrec.phone %></td>
        <td><%= layrec.created_at.strftime("%A, %d %b %Y") %></td>
        <% if current_user  && current_user.admin? %>
          <td><%= link_to 'Edit', edit_layrec_path(layrec) %></td>
          <td><%= link_to 'Destroy', layrec, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</center>
<br>
